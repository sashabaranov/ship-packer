{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/build_ship.sh",
            "scripts/vagrant_finish.sh",
            "scripts/cleanup.sh"
          ]
        },
        "docker": {
          "execute_command": "{{.Path}}",
          "scripts": [
            "scripts/docker_init.sh",
            "scripts/build_ship.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
     [
      {
          "type": "vagrant",
          "output": "build/ship-cc7.box",
          "only": ["virtualbox-iso"]
      },
      {
          "type": "atlas",
          "only": ["virtualbox-iso"],
          "artifact": "sashabaranov/ship-cc7",
          "artifact_type": "ship-cc7.box",
          "metadata": {
              "provider": "virtualbox",
              "version": "1.1"
          }
      }
    ],
    [
      {
        "type": "docker-import",
        "repository": "scr4t/ship",
        "tag": "latest",
        "only": ["docker"]
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `DOCKER_USERNAME`}}",
        "login_password": "{{user `DOCKER_PASSWORD`}}",
        "login_email": "{{user `DOCKER_EMAIL`}}",
        "only": ["docker"]
      }
    ]
  ],
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "disk_size": 65536,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.sonic.net/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "headless": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--memory", "2048"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    },
    {
        "type": "docker",
        "image": "hepsw/cc7-base:7.1",
        "export_path": "ship-docker.tar"
    }
  ]
}